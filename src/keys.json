{
  "workflow": {
    "root": [
      "name",
      "run-name",
      "on",
      "permissions",
      "env",
      "concurrency",
      "jobs!"
    ],
    "on": [
      "check_run",
      "check_suite",
      "create",
      "delete",
      "deployment",
      "deployment_status",
      "discussion",
      "discussion_comment",
      "fork",
      "gollum",
      "issue_comment",
      "issues",
      "label",
      "merge_group",
      "milestone",
      "page_build",
      "public",
      "pull_request",
      "pull_request_comment",
      "pull_request_review",
      "pull_request_review_comment",
      "pull_request_target",
      "push",
      "registry_package",
      "release",
      "repository_dispatch",
      "schedule",
      "status",
      "watch",
      "workflow_call",
      "workflow_dispatch",
      "workflow_run"
    ],
    "pull_request": ["branches", "branches-ignore", "paths", "paths-ignore"],
    "pull_request_target": [
      "branches",
      "branches-ignore",
      "paths",
      "paths-ignore"
    ],
    "push": [
      "branches",
      "tags",
      "branches-ignore",
      "tags-ignore",
      "paths",
      "paths-ignore"
    ],
    "workflow_call": ["inputs*", "outputs", "secrets"],
    "workflow_run": ["branches", "branches-ignore"],
    "workflow_dispatch": ["inputs*"],
    "inputs": ["description", "required", "default", "type"],
    "run": ["shell", "working-directory"],
    "concurrency": ["group", "cancel-in-progress"],
    "jobs": [
      "name",
      "permissions",
      "needs",
      "if",
      "runs-on",
      "environment",
      "concurrency",
      "outputs",
      "env",
      "defaults",
      "steps",
      "timeout-minutes",
      "strategy",
      "continue-on-error",
      "container",
      "services",
      "uses",
      "with",
      "secrets"
    ],
    "steps": [
      "id",
      "if",
      "name",
      "uses",
      "run",
      "working-directory",
      "with",
      "env",
      "continue-on-error",
      "timeout-minutes"
    ],
    "with": ["args", "entrypoint"],
    "strategy": ["matrix", "fail-fast", "max-parallel"],
    "matrix": ["include", "exclude"],
    "container": ["image", "credentials", "env", "ports", "volumes", "options"],
    "services": ["image", "credentials", "env", "ports", "volumes", "options"]
  },
  "composite": {
    "root": [
      "name",
      "author",
      "description",
      "inputs*",
      "outputs*",
      "runs",
      "branding"
    ],
    "inputs": ["description", "required", "default", "deprecationMessage"],
    "outputs": ["description", "value"],
    "runs": ["using", "main", "pre", "pre-if", "post", "post-if", "steps!"],
    "steps": [
      "run",
      "shell",
      "if",
      "name",
      "id",
      "env",
      "working-directory",
      "uses",
      "with",
      "continue-on-error"
    ],
    "branding": ["color", "icon"]
  }
}
